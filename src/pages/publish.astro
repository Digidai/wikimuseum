---
import BaseLayout from '../layouts/BaseLayout.astro';

const GIST_URL = 'https://gist.github.com/';
const NEW_URL = 'https://github.com/Digidai/wikimuseum/issues/new?template=new-article.yml';
const UPDATE_URL = 'https://github.com/Digidai/wikimuseum/issues/new?template=update-article.yml';
const DELETE_URL = 'https://github.com/Digidai/wikimuseum/issues/new?template=delete-article.yml';
---

<BaseLayout title="Publish Artifact" description="Publish a new article to WikiMuseum">
  <div class="mx-auto max-w-2xl">
    <div class="mb-12 text-center">
      <h1 class="text-3xl font-bold font-serif text-stone-900 mb-2">Curator Studio</h1>
      <p class="text-stone-500 font-sans">Contribute to the knowledge collection.</p>
    </div>

    <div class="space-y-12">
      <section>
        <h2 class="mb-6 text-xs font-bold uppercase tracking-widest text-stone-400 border-b border-stone-200 pb-2">New Submission</h2>
        <div class="bg-white border border-stone-200 p-8 shadow-sm hover:shadow-md transition-shadow duration-300">
          <div class="mb-8 relative pl-8 border-l-2 border-stone-200">
            <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-stone-200 text-[10px] flex items-center justify-center font-bold text-stone-600">1</div>
            <h3 class="font-bold font-serif text-lg text-stone-900">Prepare Manuscript</h3>
            <p class="mt-2 text-sm text-stone-600 leading-relaxed">Create a public GitHub Gist named <code>article.md</code>. Ensure frontmatter is correct.</p>
            <a href={GIST_URL} target="_blank" class="mt-4 inline-flex items-center text-sm font-bold text-orange-600 hover:text-orange-700 border-b border-orange-200 hover:border-orange-600 transition-colors pb-0.5">
              Open Gist <span class="ml-1">&rarr;</span>
            </a>
          </div>
          
          <div class="relative pl-8 border-l-2 border-stone-200">
            <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-stone-200 text-[10px] flex items-center justify-center font-bold text-stone-600">2</div>
            <h3 class="font-bold font-serif text-lg text-stone-900">Submit for Review</h3>
            <p class="mt-2 text-sm text-stone-600 leading-relaxed">Automated curators will process your request shortly.</p>
            <a href={NEW_URL} target="_blank" class="mt-5 inline-block bg-stone-900 text-white px-6 py-3 text-sm font-medium hover:bg-orange-600 transition-colors shadow-lg hover:shadow-xl">
              Start Submission Process
            </a>
          </div>
        </div>
      </section>

      <section>
        <h2 class="mb-6 text-xs font-bold uppercase tracking-widest text-stone-400 border-b border-stone-200 pb-2">Collection Management</h2>
        <div class="grid gap-6 sm:grid-cols-2">
          <a href={UPDATE_URL} target="_blank" class="group flex flex-col justify-between border border-stone-200 bg-white p-6 hover:border-orange-400 transition-colors">
            <span class="font-bold font-serif text-lg text-stone-900 group-hover:text-orange-700">Update Artifact</span>
            <span class="mt-4 text-xs font-bold uppercase tracking-wider text-stone-400 group-hover:text-orange-500 flex items-center">Proceed <span class="ml-2">&rarr;</span></span>
          </a>
          <a href={DELETE_URL} target="_blank" class="group flex flex-col justify-between border border-stone-200 bg-white p-6 hover:border-red-400 transition-colors">
            <span class="font-bold font-serif text-lg text-stone-900 group-hover:text-red-700">Remove Artifact</span>
            <span class="mt-4 text-xs font-bold uppercase tracking-wider text-stone-400 group-hover:text-red-500 flex items-center">Proceed <span class="ml-2">&rarr;</span></span>
          </a>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
