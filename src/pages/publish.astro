---
import BaseLayout from '../layouts/BaseLayout.astro';

const GIST_URL = 'https://gist.github.com/';
const NEW_URL = 'https://github.com/Digidai/wikimuseum/issues/new?template=new-article.yml';
const UPDATE_URL = 'https://github.com/Digidai/wikimuseum/issues/new?template=update-article.yml';
const DELETE_URL = 'https://github.com/Digidai/wikimuseum/issues/new?template=delete-article.yml';
---

<BaseLayout title="发布文章" description="发布 Markdown 文章">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold mb-6">发布文章</h1>

    <ol class="list-decimal list-inside space-y-2 mb-8">
      <li><a href={GIST_URL} target="_blank" class="text-notion-blue hover:underline">创建 Gist</a>（文件名 article.md）</li>
      <li><a href={NEW_URL} target="_blank" class="text-notion-blue hover:underline">提交发布请求</a></li>
    </ol>

    <h2 class="font-bold mb-3">管理</h2>
    <ul class="space-y-1">
      <li><a href={UPDATE_URL} target="_blank" class="text-notion-blue hover:underline">更新文章</a></li>
      <li><a href={DELETE_URL} target="_blank" class="text-notion-blue hover:underline">删除文章</a></li>
    </ul>
  </div>
</BaseLayout>
