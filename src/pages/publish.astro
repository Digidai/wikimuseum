---
import BaseLayout from '../layouts/BaseLayout.astro';

const GIST_URL = 'https://gist.github.com/';
const NEW_URL = 'https://github.com/Digidai/wikimuseum/issues/new?template=new-article.yml';
const UPDATE_URL = 'https://github.com/Digidai/wikimuseum/issues/new?template=update-article.yml';
const DELETE_URL = 'https://github.com/Digidai/wikimuseum/issues/new?template=delete-article.yml';
---

<BaseLayout title="发布文章" description="发布 Markdown 文章">
  <div class="mx-auto max-w-2xl">
    <div class="mb-10 text-center">
      <h1 class="text-3xl font-bold text-slate-900">发布中心</h1>
      <p class="mt-2 text-slate-500">管理您的知识库文章</p>
    </div>

    <div class="space-y-8">
      <section>
        <h2 class="mb-4 text-sm font-semibold uppercase tracking-wider text-slate-500">发布新文章</h2>
        <div class="overflow-hidden rounded-xl border border-slate-200 bg-slate-50/50">
          <div class="border-b border-slate-200 p-6">
            <div class="flex gap-4">
              <div class="flex h-8 w-8 shrink-0 items-center justify-center rounded-full bg-white border border-slate-200 text-sm font-bold text-slate-700 shadow-sm">1</div>
              <div>
                <h3 class="font-medium text-slate-900">准备内容</h3>
                <p class="mt-1 text-sm text-slate-500">创建一个 GitHub Gist，将文件命名为 <code>article.md</code>。</p>
                <a href={GIST_URL} target="_blank" class="mt-3 inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-500">
                  前往 Gist <span class="ml-1">&rarr;</span>
                </a>
              </div>
            </div>
          </div>
          <div class="p-6">
            <div class="flex gap-4">
              <div class="flex h-8 w-8 shrink-0 items-center justify-center rounded-full bg-white border border-slate-200 text-sm font-bold text-slate-700 shadow-sm">2</div>
              <div>
                <h3 class="font-medium text-slate-900">提交申请</h3>
                <p class="mt-1 text-sm text-slate-500">我们会自动处理您的发布请求。</p>
                <a href={NEW_URL} target="_blank" class="mt-3 inline-flex items-center rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 shadow-sm transition-colors">
                  开始发布
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section>
        <h2 class="mb-4 text-sm font-semibold uppercase tracking-wider text-slate-500">文章管理</h2>
        <div class="grid gap-4 sm:grid-cols-2">
          <a href={UPDATE_URL} target="_blank" class="group flex items-center justify-between rounded-xl border border-slate-200 p-4 hover:border-blue-300 hover:bg-blue-50 transition-all">
            <span class="font-medium text-slate-700 group-hover:text-blue-700">更新文章</span>
            <span class="text-slate-400 group-hover:text-blue-500">&rarr;</span>
          </a>
          <a href={DELETE_URL} target="_blank" class="group flex items-center justify-between rounded-xl border border-slate-200 p-4 hover:border-red-300 hover:bg-red-50 transition-all">
            <span class="font-medium text-slate-700 group-hover:text-red-700">删除文章</span>
            <span class="text-slate-400 group-hover:text-red-500">&rarr;</span>
          </a>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
