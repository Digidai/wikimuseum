---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticleCard from '../components/ArticleCard.astro';

const articles = (await getCollection('articles'))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<BaseLayout title="首页" description="WikiMuseum">
  <div class="space-y-2">
    {articles.length > 0 ? (
      <div class="grid gap-1">
        {articles.map((article) => (
          <ArticleCard
            title={article.data.title}
            publishDate={article.data.publishDate}
            slug={article.id}
          />
        ))}
      </div>
    ) : (
      <div class="rounded-xl border border-dashed border-slate-200 p-12 text-center">
        <p class="text-slate-500">
          还没有文章。<a href="/wikimuseum/publish/" class="font-medium text-blue-600 hover:underline">发布第一篇</a>
        </p>
      </div>
    )}
  </div>
</BaseLayout>
