---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticleCard from '../components/ArticleCard.astro';

const articles = (await getCollection('articles'))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<BaseLayout title="Home">
  <div class="max-w-3xl mx-auto pt-8">
    {articles.length > 0 ? (
      <div class="flex flex-col">
        {articles.map((article) => (
          <ArticleCard
            title={article.data.title}
            publishDate={article.data.publishDate}
            slug={article.id}
            description={article.data.description}
          />
        ))}
      </div>
    ) : (
      <div class="py-12 text-center text-notion-secondary">
        <p class="mb-4">No pages found.</p>
        <a href="/wikimuseum/publish/" class="text-notion-text underline decoration-notion-secondary underline-offset-4 hover:text-black">
          Create new page
        </a>
      </div>
    )}
  </div>
</BaseLayout>
