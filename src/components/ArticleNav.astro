---
interface Article {
  id: string;
  data: {
    title: string;
  };
}

interface Props {
  prev?: Article;
  next?: Article;
}

const { prev, next } = Astro.props;
---

<nav class="mt-16 pt-8 border-t border-notion-border">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {prev ? (
      <a
        href={`/wikimuseum/articles/${prev.id}/`}
        class="group p-5 bg-notion-bg rounded-notion shadow-card hover:shadow-card-hover transition-shadow"
      >
        <div class="text-sm text-notion-tertiary mb-1">上一篇</div>
        <div class="font-medium text-notion-text group-hover:text-notion-blue transition-colors line-clamp-1">
          {prev.data.title}
        </div>
      </a>
    ) : (
      <div></div>
    )}

    {next ? (
      <a
        href={`/wikimuseum/articles/${next.id}/`}
        class="group p-5 bg-notion-bg rounded-notion shadow-card hover:shadow-card-hover transition-shadow md:text-right"
      >
        <div class="text-sm text-notion-tertiary mb-1">下一篇</div>
        <div class="font-medium text-notion-text group-hover:text-notion-blue transition-colors line-clamp-1">
          {next.data.title}
        </div>
      </a>
    ) : (
      <div></div>
    )}
  </div>
</nav>
