---
interface Article {
  id: string;
  data: {
    title: string;
  };
}

interface Props {
  prev?: Article;
  next?: Article;
}

const { prev, next } = Astro.props;
---

{(prev || next) && (
  <nav class="py-8 border-t border-notion-border">
    <div class="flex justify-between gap-8">
      {prev ? (
        <a href={`/wikimuseum/articles/${prev.id}/`} class="group flex-1">
          <div class="text-sm text-notion-tertiary mb-1">上一篇</div>
          <div class="text-notion-text group-hover:text-notion-blue transition-colors line-clamp-1">
            {prev.data.title}
          </div>
        </a>
      ) : (
        <div class="flex-1"></div>
      )}

      {next ? (
        <a href={`/wikimuseum/articles/${next.id}/`} class="group flex-1 text-right">
          <div class="text-sm text-notion-tertiary mb-1">下一篇</div>
          <div class="text-notion-text group-hover:text-notion-blue transition-colors line-clamp-1">
            {next.data.title}
          </div>
        </a>
      ) : (
        <div class="flex-1"></div>
      )}
    </div>
  </nav>
)}
