---
interface Props {
  title: string;
  description: string;
  publishDate: Date;
  slug: string;
}

const { title, description, publishDate, slug } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};
---

<a href={`/wikimuseum/articles/${slug}/`} class="block group py-8 border-b border-notion-border">
  <article>
    <time class="text-sm text-notion-tertiary">
      {formatDate(publishDate)}
    </time>
    <h2 class="text-2xl font-semibold mt-2 mb-3 text-notion-text group-hover:text-notion-blue transition-colors">
      {title}
    </h2>
    <p class="text-notion-secondary leading-relaxed line-clamp-2">
      {description}
    </p>
  </article>
</a>
