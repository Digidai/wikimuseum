---
interface Props {
  title: string;
  publishDate: Date;
  slug: string;
}

const { title, publishDate, slug } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('zh-CN', { year: 'numeric', month: '2-digit', day: '2-digit' }).format(date);
};
---

<a href={`/wikimuseum/articles/${slug}/`} class="group block rounded-xl border border-transparent p-5 -mx-5 hover:bg-slate-50 hover:border-slate-100 transition-all duration-200 sm:p-6 sm:-mx-6">
  <h3 class="text-lg font-semibold text-slate-900 group-hover:text-blue-600 transition-colors">
    {title}
  </h3>
  <time class="mt-2 block text-sm text-slate-400 group-hover:text-slate-500">
    {formatDate(publishDate)}
  </time>
</a>
