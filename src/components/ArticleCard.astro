---
interface Props {
  title: string;
  publishDate: Date;
  slug: string;
  description?: string;
}

const { title, publishDate, slug, description } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('zh-CN', { year: 'numeric', month: '2-digit', day: '2-digit' }).format(date);
};
---

<a href={`/wikimuseum/articles/${slug}/`} class="group flex flex-col justify-between h-full rounded-none border border-stone-200 bg-white p-6 transition-all duration-300 hover:border-orange-300 hover:shadow-lg hover:-translate-y-1">
  <div>
    <time class="mb-3 block text-xs font-medium uppercase tracking-widest text-stone-400 group-hover:text-orange-500">
      {formatDate(publishDate)}
    </time>
    <h3 class="mb-3 text-xl font-bold font-serif text-stone-900 group-hover:text-orange-700 leading-snug">
      {title}
    </h3>
    {description && (
      <p class="text-sm text-stone-500 leading-relaxed line-clamp-3">
        {description}
      </p>
    )}
  </div>
  <div class="mt-6 flex items-center text-xs font-medium font-sans text-stone-400 group-hover:text-orange-600 uppercase tracking-wider">
    Read Article <span class="ml-2 transition-transform group-hover:translate-x-1">&rarr;</span>
  </div>
</a>
