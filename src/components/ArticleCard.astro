---
interface Props {
  title: string;
  publishDate: Date;
  slug: string;
  description?: string;
}

const { title, publishDate, slug } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', { year: 'numeric', month: 'short', day: 'numeric' }).format(date);
};
---

<a href={`/wikimuseum/articles/${slug}/`} class="group flex items-center justify-between py-2 px-3 -mx-3 rounded hover:bg-notion-hover transition-colors">
  <h3 class="text-notion-text font-medium truncate pr-4">
    {title}
  </h3>
  <div class="hidden sm:block text-sm text-notion-secondary shrink-0">
    {formatDate(publishDate)}
  </div>
</a>