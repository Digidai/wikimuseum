---
interface Props {
  title: string;
  description: string;
  publishDate: Date;
  slug: string;
}

const { title, description, publishDate, slug } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};
---

<a href={`/wikimuseum/articles/${slug}/`} class="block group py-5 border-b border-notion-border last:border-b-0">
  <article>
    <h2 class="text-lg font-medium text-notion-text group-hover:text-notion-blue transition-colors">
      {title}
    </h2>
    <p class="text-notion-muted text-sm mt-1.5 line-clamp-2">
      {description}
    </p>
    <time class="text-xs text-notion-muted/70 mt-2 block">
      {formatDate(publishDate)}
    </time>
  </article>
</a>
