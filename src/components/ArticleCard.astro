---
interface Props {
  title: string;
  publishDate: Date;
  slug: string;
}

const { title, publishDate, slug } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('zh-CN', { year: 'numeric', month: '2-digit', day: '2-digit' }).format(date);
};
---

<a href={`/wikimuseum/articles/${slug}/`} class="flex justify-between items-baseline py-2 hover:text-notion-blue">
  <span>{title}</span>
  <span class="text-sm text-notion-tertiary ml-4 shrink-0">{formatDate(publishDate)}</span>
</a>
