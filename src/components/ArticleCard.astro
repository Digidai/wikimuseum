---
interface Props {
  title: string;
  description: string;
  publishDate: Date;
  slug: string;
}

const { title, description, publishDate, slug } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};
---

<a href={`/wikimuseum/articles/${slug}/`} class="block group">
  <article class="bg-notion-card rounded-xl p-6 shadow-notion hover:shadow-md transition-all duration-300 border border-notion-border hover:border-notion-blue/30">
    <time class="text-sm text-notion-muted">
      {formatDate(publishDate)}
    </time>
    <h2 class="text-xl font-semibold mt-2 mb-3 text-notion-text group-hover:text-notion-blue transition-colors">
      {title}
    </h2>
    <p class="text-notion-muted line-clamp-2">
      {description}
    </p>
    <div class="mt-4 flex items-center text-sm text-notion-blue font-medium">
      <span>阅读全文</span>
      <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </article>
</a>
